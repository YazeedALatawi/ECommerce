@using ECommerce.Models.Service;
@using Microsoft.AspNetCore.Identity;
@using Newtonsoft.Json;
@inject SignInManager<User> signInManager;
@inject UserManager<User> userManager;
@inject ShoppingCartService shoppingCartService



<!DOCTYPE html>
<html lang="ar">
<head dir="rtl">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>الصاعقة - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ECommerce.styles.css" asp-append-version="true" />
	<link href="~/lib/bootstrap/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
	<link href="~/lib/bootstrap/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />

    <!-- تضمين مكتبة SweetAlerts -->

    <style>
        .dropdownCustom{
            color:white!important;
        }

        .dropdownCustom:hover{
            color:black!important;
        }

        .icon-custom{
            font-size:32px;
            color:white;
            cursor:pointer;
        }
        .icon-custom:hover{
            color:yellow;
        }

    </style>
</head>
<body dir="rtl">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-black mb-0 p-0" style="background-color:black !important;">
            <div class="container-fluid">
                <a class="navbar-brand m-1" asp-area="" asp-controller="Home" asp-action="Index"><img class="img-fluid" style="max-width: 150px; height: auto;" src="~/img/imghome/homeimg1.jpg" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-black mx-3 fw-bold" style="background-color:#ffff2d" asp-area="" asp-controller="Home" asp-action="Index">الصفحة الرئيسية</a>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <a class="nav-link text-white mx-3 dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    الاصناف
                                </a>

                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink" style="background-color:black !important;">
                                    <a class="dropdown-item text-center dropdownCustom" href="#">الكل</a>
                                    <a class="dropdown-item text-center dropdownCustom" href="#">الأقمشة</a>
                                    <a class="dropdown-item text-center dropdownCustom" href="#">البساطير والجزم</a>
                                    <a class="dropdown-item text-center dropdownCustom" href="#">الانوطه و الونقات</a>
                                    <a class="dropdown-item text-center dropdownCustom" href="#">الاكسسوارات</a>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white mx-1" asp-area="" asp-controller="Home" asp-action="Privacy">الخصوصية</a>
                        </li>
                    </ul>







                    <div class="d-flex align-items-center">
                        <a asp-action="index" asp-controller="Cart"><i class="bi bi-cart-check-fill icon-custom"></i></a>
                        @{
                            int count = shoppingCartService.GetCartItemCount();
                            if(count > 0)
                            {
                                 <span id="cart-item-count" class="text-white">@count</span>
                            }

                        }


                        <div class="dropdown show ms-5">
                            @if (signInManager.IsSignedIn(User))
                            {
                                var user = await userManager.GetUserAsync(User);
                                <a class="nav-link text-white mx-3 dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @user.FirstName @user.LastName
                                </a>
                            }
                            else
                            {
                                <a class="nav-link text-white mx-3 dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="bi bi-person-fill icon-custom"></i>
                                </a>
                            }
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink" style="background-color:black !important;">
                                @if (!signInManager.IsSignedIn(User))
                                {
                                    <a class="dropdown-item text-center dropdownCustom" role="button" onclick="showInPopup('@Url.Action("Login","Account",null, Context.Request.Scheme)','تسجيل دخول')">دخول</a>
                                    <a class="dropdown-item text-center dropdownCustom" role="button" asp-action="Register" asp-controller="Account">تسجيل</a>
                                    <a class="dropdown-item text-center dropdownCustom" role="button" asp-action="index" asp-controller="AdminDashboard">لوحة التحكم</a>
                                }
                                else
                                {
                                    <a class="dropdown-item text-center dropdownCustom" asp-action="index" asp-controller="Order">طلباتي</a>
                                    <a class="dropdown-item text-center dropdownCustom" href="#">بياناتي</a>
                                    <form asp-action="Logout" asp-controller="Account" method="post">
                                        <button class="dropdown-item text-center dropdownCustom" type="submit">تسجيل خروج</button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </nav>


    </header>



    <div class="container me-0 pe-0" id="container">
        <main role="main" class="pb-2">
            @RenderBody()
        </main>
    </div>


        <!-- Modal Login start -->
    <div class="modal" tabindex="-1" role="dialog" id="form-modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"></h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        
      </div>
    </div>
  </div>
</div>

    <div class="modal" tabindex="-1" role="dialog" id="form-modal-crud">
        <div class="modal-dialog modal-lg modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Login End -->

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ECommerce - <a asp-area="" asp-controller="Home" asp-action="Privacy">الخصوصية</a>
        </div>
    </footer>
    <!-- تضمين مكتبة SweetAlerts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>



    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("NToastNotify")
</body>
</html>
