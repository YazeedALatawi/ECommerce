@model ECommerce.Models.Category

@{
    ViewData["Title"] = "اضافة فئه";
}


<h1>اضافة فئه</h1>

<h4>الفئات</h4>
<hr />
<form asp-action="Create" method="post">

    <div class="row">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mb-4">
            <label class="control-label">اسم الفئه</label>
            <span asp-validation-for="Name" class="text-danger"></span>
            <input asp-for="Name" autocomplete="off" class="form-control" />
        </div>
        <div class="form-group mt-3">
            <input type="submit" value="اضافة" class="btn btn-primary" />
        </div>
        <div class="form-group mt-2">
            <a asp-action="Index">الرجوع</a>
        </div>

    </div>

</form>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.getElementById("container").classList.remove('me-0');
        document.getElementById("container").classList.remove('pe-0');
    </script>
}
