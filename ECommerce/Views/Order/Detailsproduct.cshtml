@model IEnumerable<ECommerce.Models.CartProducts>
@using Microsoft.EntityFrameworkCore;

    <style>
        body{
            background-color:#fff;
        }
    </style>

    @{
    ViewData["Title"] = "تفاصيل الطلب";
}
<div class="container w-75">
<table class="table table-striped mt-5">
    <thead style="background-color:#1c1c1c; color:white;">
        <tr>
            <th scope="col">
                
            </th>
            <th scope="col">
                @Html.DisplayName("اسم المنتج")
            </th>
            <th>
                @Html.DisplayName("الكمية")
            </th scope="col">
            <th>
                @Html.DisplayName("اجمالي السعر")
            </th>
            <th>
                @Html.DisplayName("الخيارات")
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    
        <tr>

            <td>
                            <a asp-action="Details" asp-controller="Products" asp-route-Id="@item.key">
                <img src="~/@item.product.Image" class="img-thumbnail" width="150px" height="150px">
                            </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.count)
            </td>
            <td>
                @{var totalPrice = item.count * item.product.Price;}
                <p>@totalPrice</p>
            </td>
            <td>
                @foreach(var option in item.options)
                {
                    <p>@option.MainOptionName:  @option.SubOptionName</p>
                }
            </td>

        </tr>

}
    </tbody>
</table>


</div>

@section Scripts {
	<script>
		document.getElementById("container").classList.remove('me-0');
		document.getElementById("container").classList.remove('pe-0');
	</script>
}